#!/bin/bash

set -euo pipefail

bspc config border_width    2
bspc config bottom_padding -2
bspc config top_padding    -2

bspc monitor DP1 -d 1 2 3
for monitor in $(xrandr | grep HDMI | grep ' connected ' | awk '{print $1}') ; do
    #won't work with multiple monitors
    bspc monitor "$monitor" -d 8 9 0
    bspc config -m "$monitor" right_padding -2
done

bspc desktop 1 -l monocle
bspc desktop 8 -l monocle
