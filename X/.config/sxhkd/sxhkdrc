#
# bspwm hotkeys
#

# close and kill
super + {_,shift + }w
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# adjust the split ratios so that all windows occupy the same area
super + b
    bspc node -B

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

# swap selected node with the last selected one
super + apostrophe
    bspc node -s last

# change selected node split ratio
super + ctrl + {1-9}
    bspc node -r 0.{1-9}

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Focus prev/next node
alt + {shift +,_} Tab
    bspc node -f {prev,next}.local

# select, swap or preselect windows (tiled layout)
super + {_,shift + ,ctrl + }{h,j,k,l}
    bspc node -{f,s,p} {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '{1-9,0}'

# Focus prev/next desktop
alt + {comma,period}
    bspc desktop -f {prev,next}

super + v
    sleep 0.2 ; xdotool type --delay 0 --clearmodifiers -- "$(xclip -o -selection clipboard)"

#
# Apps
#

super + Return
    st -e sh -c "tmux new-session"

super + shift + Return
    st

super + space
    dmenu_run

super + n
    firefox --new-tab http://localhost:19999/

super + shift + {i,o}
    mpc -q seek {-,+}2%

super + {i,o,p}
    mpc -q {prev,next,toggle}

super + shift + m
    pactl set-sink-mute $(pactl list short sinks | grep RUNNING | awk '\{ print $1 \}') toggle

super + {minus,equal}
    pactl set-sink-volume $(pactl list short sinks | grep RUNNING | awk '\{ print $1 \}') {-,+}5%

super + F1
    slock

XF86Audio{Prev,Next,Play}
    mpc -q {prev,next,toggle}

XF86AudioMute
    pactl set-sink-mute $(pactl list short sinks | grep RUNNING | awk '\{ print $1 \}') toggle

XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume $(pactl list short sinks | grep RUNNING | awk '\{ print $1 \}') {-,+}5%

XF86MonBrightness{Down,Up}
    xbacklight -{dec,inc} 5

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
