[DEFAULT]
git_gc = git gc "$@"
git_gcaggressive = git gc --aggressive "$@"

lib =
    git_clone ()
    {
        # $1 is repository name
        # $2 is optional different destination directory
        # $3 is optional different origin
        name="$(basename "$1")"
        if [[ -n "$2" ]] ; then
            dest="$2"
        else
            dest="${name}"
        fi
        if [[ -n "$3" ]] ; then
            origin="$3"
        else
            origin=git@gitlab.com:jody-frankowski/"${name}".git
        fi
        git clone "${origin}" "${dest}" &&
        cd "${dest}" &&
        git remote add gh git@github.com:jody-frankowski/"${name}".git &&
        git remote add gl git@gitlab.com:jody-frankowski/"${name}".git &&
        git remote set-url --add --push origin git@github.com:jody-frankowski/"${name}".git &&
        git remote set-url --add --push origin git@gitlab.com:jody-frankowski/"${name}".git
    }

checkout = git_clone "$MR_REPO"

include = cat .mrconfig-*

[.dotfiles]
checkout = git clone 'git@gitlab.com:jody-frankowski/dotfiles.git' '.dotfiles'

