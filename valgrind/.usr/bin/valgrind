#!/bin/sh

# Call the real valgrind
# The last one in PATH for now
real=$(type -a valgrind | tail -n-1 | awk '{print $3}')
if [[ "$real" == "$0" ]] ; then
    echo "Aborting! Valgrind doesn't seem to be installed!" 2>&1
    exit -1
fi

exec "$real" --suppressions="$HOME"/.config/valgrind/vgpreload.supp "$@"
